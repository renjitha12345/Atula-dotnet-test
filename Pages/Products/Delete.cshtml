@page
@model AtulaHomeFurniture.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="mb-3">
    <div>
        <h4>@Model.Product.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">SKU</dt>
            <dd class="col-sm-10">@Model.Product.Sku</dd>

            <dt class="col-sm-2">Categories</dt>
            <dd class="col-sm-10">@string.Join(", ", Model.Product.Categories.Select(c => c.Name))</dd>
        </dl>
    </div>
</div>

<form method="post">
    <input asp-for="@Model.Product.Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
        });
    </script>
}
