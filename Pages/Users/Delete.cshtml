@page
@model AtulaHomeFurniture.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

<form method="post">
    <input asp-for="@Model.User.Id" type="hidden" />
    <div class="alert alert-danger mb-3">
        <h4 class="alert-heading">Are you sure you want to delete this user?</h4>
        <p><strong>First Name:</strong> @Model.User.FirstName</p>
        <p><strong>Last Name:</strong> @Model.User.LastName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Phone Number:</strong> @Model.User.PhoneNumber</p>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
