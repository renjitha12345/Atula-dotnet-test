@page
@model AtulaHomeFurniture.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<form method="post">
    <input asp-for="Category.Id" type="hidden" />
    <div class="alert alert-danger mb-2">
        <h4 class="alert-heading">Are you sure you want to delete this category?</h4>
        <p><strong>Category Name:</strong> @Model.Category.Name</p>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                toastr.success(successMessage);
            }
        });
    </script>
}
